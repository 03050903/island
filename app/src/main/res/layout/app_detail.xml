<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.content.pm.ApplicationInfo" />
        <import type="android.support.design.widget.BottomSheetBehavior" />
        <import type="com.oasisfeng.island.data.AppViewModel.State" />
        <import type="com.oasisfeng.island.BuildConfig" />
        <variable name="apps" type="com.oasisfeng.island.data.AppListViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/app_detail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Dark"
        android:background="@color/bottom_sheet_background"
        android:elevation="@dimen/elevation_card_raised"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="64dp"
        bind:behavior_state="@{apps.selection != null ? BottomSheetBehavior.STATE_COLLAPSED : BottomSheetBehavior.STATE_HIDDEN}"
        bind:behavior_bottomSheetCallback="@{apps.bottom_sheet_callback}"
        android:onClick="@{apps.onBottomSheetClick}">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:maxLines="@{BuildConfig.DEBUG ? 2 : 1}"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@{BuildConfig.DEBUG ? apps.selection.pkg : apps.selection.name}"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@{apps.selection.state == State.Alive ? @string/state_alive : apps.selection.state == State.Frozen ? @string/state_frozen : apps.selection.state == State.Disabled ? @string/state_disabled : apps.selection.state == State.NotCloned ? @string/state_not_cloned : null}"
            tools:text="Frozen" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:maxLines="1"
            android:enabled="@{apps.selection.state != State.NotCloned}"
            android:onClick="@{apps::onRemovalRequested}"
            android:text="@{(apps.selection.flags &amp; ApplicationInfo.FLAG_SYSTEM) == 0 ? @string/button_remove_clone : apps.selection.state == State.Disabled ? @string/button_enable_clone : @string/button_disable_clone}"
            tools:text="@string/button_remove_clone"/>

    </LinearLayout>

</layout>