<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:comment="http://schemas.android.com/tools">

    <data>
        <import type="android.content.pm.ApplicationInfo" />
        <import type="android.os.Build.VERSION" />
        <import type="android.os.Build.VERSION_CODES" />
        <import type="android.support.design.widget.BottomSheetBehavior" />
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <import type="com.oasisfeng.island.BuildConfig" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <LinearLayout
        android:id="@+id/app_detail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:theme="@style/AppTheme.Dark"
        android:background="@color/bottom_sheet_background"
        android:elevation="@dimen/elevation_card_raised"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="72dp"
        bind:behavior_state="@{apps.selection != null ? BottomSheetBehavior.STATE_COLLAPSED : BottomSheetBehavior.STATE_HIDDEN}"
        bind:behavior_bottomSheetCallback="@{apps.bottom_sheet_callback}"
        android:onClick="@{apps::onBottomSheetClick}">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_tiny"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@{apps.selection.name}"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@{(apps.selection.state == State.Alive ? @string/state_alive : apps.selection.state == State.Frozen ? @string/state_frozen : apps.selection.state == State.Disabled ? @string/state_disabled : apps.selection.state == State.NotCloned ? @string/state_not_cloned : null) + &quot; &quot; + ((apps.selection.state == State.Alive || apps.selection.state == State.Frozen) &amp;&amp; apps.selection.exclusive ? @string/status_exclusive : &quot;&quot;)}"
            tools:text="Frozen" />

        <TextView
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@{@string/field_app_id(apps.selection.pkg)}"
            tools:text="APP ID: com.oasisfeng.island" />

        <Button style="@style/AppTheme.BorderlessActionButton"
            android:enabled="@{apps.selection.launchable &amp;&amp; (apps.selection.state == State.Alive || apps.selection.state == State.Frozen)}"
            android:onClick="@{apps::onShortcutRequested}"
            android:text="@string/button_create_shortcut" />

        <Button style="@style/AppTheme.BorderlessActionButton"
            bind:visible="@{apps.selection.state == State.Alive || apps.selection.state == State.Frozen}"
            android:onClick="@{apps::onGreenifyRequested}"
            android:text="@string/button_greenify" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:visible="@{BuildConfig.DEBUG &amp;&amp; VERSION.SDK_INT > VERSION_CODE.M}"
            android:orientation="horizontal" >

            <Button style="@style/AppTheme.BorderlessActionButton"
                    android:layout_weight="1"
                    android:onClick="@{apps::onBlockingRequested}"
                    android:text="@string/button_block" />

            <Button style="@style/AppTheme.BorderlessActionButton"
                    android:layout_weight="1"
                    android:onClick="@{apps::onUnblockingRequested}"
                    android:text="@string/button_unblock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:visible="@{! status.running_in_owner}" comment:x1="Never show installation-related actions in God mode"
            android:orientation="horizontal" >

            <Button style="@style/AppTheme.BorderlessActionButton"
                android:layout_weight="1"
                android:enabled="@{apps.selection.state != State.NotCloned}" comment:x2="Alive, Frozen and Disabled"
                android:onClick="@{apps::onRemovalRequested}"
                android:text="@{! apps.selection.isSystem() ? (apps.selection.exclusive ? @string/button_uninstall_clone : @string/button_remove_clone) : apps.selection.state == State.Disabled ? @string/button_enable_clone : @string/button_disable_clone}"
                tools:text="@string/button_remove_clone" />

            <Button style="@style/AppTheme.BorderlessActionButton"
                android:layout_weight="1"
                bind:visible="@{apps.selection == null || apps.selection.exclusive &amp;&amp; ! apps.selection.isSystem()}" comment:x3="apps.selection == null to workaround a weird out-of-sync issue"
                android:onClick="@{apps::onOwnerInstallationRequested}"
                android:text="@string/button_install_outside" />

        </LinearLayout>

    </LinearLayout>

</layout>