<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <import type="com.oasisfeng.island.model.AppViewModel.State" />
        <variable name="apps" type="com.oasisfeng.island.model.AppListViewModel" />
        <variable name="status" type="com.oasisfeng.island.model.GlobalStatus" />
    </data>

    <android.support.design.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent" >

        <Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
            android:popupTheme="@style/AppThemeOverlay.Dark.Popup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -" tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/filters"
                android:entries="@{apps.active_filters}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:popupTheme="@style/AppThemeOverlay.Dark.Popup"/>

        </Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:paddingBottom="8dp"
            android:paddingStart="-16dp" tools:comment="To workaround the weired tilt side shadow on elevated item"
            android:paddingEnd="-16dp"
            android:clipToPadding="false"
            android:background="@color/background"
            bind:items="@{apps.items}"
            bind:item_binder="@{apps.item_binder}"
            tools:listitem="@layout/app_entry" />

        <include layout="@layout/app_detail" bind:apps="@{apps}" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchor="@id/app_detail"
            app:layout_anchorGravity="top|right|end"
            app:layout_behavior="com.oasisfeng.island.util.FloatingActionButtonBehavior"
            android:clickable="true"
            android:src="@{apps.fabImage}"
            bind:visible="@{apps.fabImage != 0}"
            android:onClick="@{apps::onFabClick}"
            app:backgroundTint="@{apps.fabBgColor}"
            app:rippleColor="?android:attr/colorControlHighlight"
            app:elevation="@dimen/fab_elevation"
            app:pressedTranslationZ="@dimen/fab_elevation_pressed" />

    </android.support.design.widget.CoordinatorLayout>

</layout>