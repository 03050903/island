<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="com.oasisfeng.island.shared">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application tools:ignore="AllowBackup,GoogleAppIndexingWarning,MissingApplicationIcon">

        <meta-data android:name="io.fabric.ApiKey" android:value="2fa85ef2740d3e29a2ed203a3af1db3513507ddb" />

        <!-- This single user content provider forwards analytics requests from managed profile. (only works with INTERACT_ACROSS_USERS permission granted) -->
        <provider android:authorities="${applicationId}.analytics"
                  android:name="com.oasisfeng.island.analytics.AnalyticsProvider"
                  android:singleUser="true"
                  android:exported="false"
                  android:enabled="false"
                  android:initOrder="100"/>

        <!-- GlobalContextProvider -->
        <provider android:name="com.oasisfeng.island.InternalContentProviders$_0" android:initOrder="9999"
                  android:authorities="${applicationId}.internal.0" android:multiprocess="true" android:exported="false" />
        <!-- Users -->
        <provider android:name="com.oasisfeng.island.InternalContentProviders$_1" android:initOrder="1000"
                  android:authorities="${applicationId}.internal.1" android:multiprocess="true" android:exported="false" />
        <!-- CrashReport -->
        <provider android:name="com.oasisfeng.island.InternalContentProviders$_2"
                  android:authorities="${applicationId}.internal.2" android:multiprocess="true" android:exported="false" />

        <!-- Disable the default heavy-weight initialization of Firebase -->
        <provider android:name="com.google.firebase.provider.FirebaseInitProvider"
                  android:authorities="${applicationId}.firebaseinitprovider"
                  tools:node="remove" tools:ignore="ExportedContentProvider"/>

        <service android:name="com.oasisfeng.island.firebase.LazyFirebaseInstanceIdService" android:exported="true" tools:ignore="ExportedService">
            <intent-filter> <!-- Override the original FirebaseInstanceIdService -->
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
